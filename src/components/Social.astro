---
interface Props {
	platform?: string;
	username?: string;
}
const { platform, username } = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`}>{platform}</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: var(--color-foreground);
    background-color: var(--color-background);
    text-decoration: none;
    font-size: var(--fs-small);
  }
</style>